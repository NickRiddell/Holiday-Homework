<%= link_to("Add New Quantity", new_quantity_path) %>
<ul>
<% @quantities.each do |quantity| %>
<li>
<%= quantity.recipe.title %> - <%= quantity.amount %> <%= quantity.ingredient.name %><br>
<%= link_to('Edit', edit_quantity_path(quantity),  class: "show") %>
<%= button_to("Delete", quantity_path(quantity), method: :delete, data: {confirm: 'Are you sure you want to delete this quantity?'}) %><br><br>
</li>
<% end %>
</ul>
